---
import Layout from "../components/layout.astro";
import fetchApi from "../lib/strapi";

type clientTypes = {
    name: string;
    slug: string;
};
const clients: clientTypes[] = await fetchApi({
    endpoint: "clients", // the content type to fetch
    // more: false,
});
---

<Layout title="Clients">
    <main>
        <h1>Clients</h1>
        <hr />
        <section>

            {clients.map((client) => 
        <article>
                <a href={`/client/${client.slug}`}>
            {client.name}
            </a>
            </article>
        
    )}
    </section>
        <hr />
    </main>
</Layout>
